{
  "manifest_version": 3,
  "name": "Clocky",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab"
    // Add other permissions as needed for your extension
  ],
  "browser_action": {
    "default_popup": "timers.html"
    // Add other settings as needed for your extension
  }
  // Add other fields as needed for your extension
//   "web_accessible_resources":[{
//         "resources":["sites.html"],
//         "matches":["*://*/*"]
//         }]
"commands": {
    "start_timer": {
        "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
        }
    }
    }
}